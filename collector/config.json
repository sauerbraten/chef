{
	// SQlite database file name
	"db_file_path": "~/.chef/chef.sqlite",


	// collector

	// master server address
	"master_server_address": "sauerbraten.org",

	// master server port
	"master_server_port": "28787",

	// servers that should be scanned even when they are not on the master list
	"hidden_servers": [
		"127.0.0.1:28785"
	],

	// servers that should never be scanned (overrides the list of hidden servers to scan)
	// if no port is specfied, all servers on that host are blacklisted
	"blacklisted_servers": [
		"pisto.horse" // sends fake IPs matching the player's country, can't be filtered
	],

	// scan interval in seconds
	"scan_interval_seconds": 10
}